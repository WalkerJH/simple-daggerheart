<fieldset class='flexrow gap-3 character-sheet-statuses'>
  {{#each this.traits as |trait|}}
    <div class='flexcol character-stat'>
      <div class='flexrow character-stat-header'>
        {{localize trait.label}}

        <input
          type='checkbox'
          name='{{concat trait.baseName ".marked"}}'
          {{checked trait.marked}}
        />
      </div>

      <input
        class='character-stat-input'
        type='number'
        name='{{concat trait.baseName ".value"}}'
        value='{{trait.value}}'
      />

      <ul>
        {{#each trait.examples as |example|}}
          <li>{{localize example}}</li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</fieldset>