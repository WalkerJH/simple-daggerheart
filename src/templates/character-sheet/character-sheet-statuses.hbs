<div class='flexcol gap-2 character-sheet-statuses'>
  <div class='flexrow'>
    <span class='character-status-label'>HP</span>
    <div class='character-status'>
      {{#each this.resourceArrays.hp as |hpMarker|}}
        {{#if hpMarker}}
          <i class='fas fa-heart'></i>
        {{else}}
          <i class='fas fa-regular fa-heart'></i>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <div class='flexrow'>
    <span class='character-status-label'>STRESS</span>
    <div class='character-status'>
      {{#each this.resourceArrays.stress as |stressMarker|}}
        {{#if stressMarker}}
          <i class='fas fa-rectangle'></i>
        {{else}}
          <i class='fas fa-regular fa-rectangle'></i>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <div class='flexrow'>
    <span class='character-status-label'>HOPE</span>
    <div class='character-status'>
      {{#each this.resourceArrays.hope as |hopeMarker|}}
        {{#if stressMarker}}
          <i class='fas fa-diamond'></i>
        {{else}}
          <i class='fas fa-regular fa-diamond'></i>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>