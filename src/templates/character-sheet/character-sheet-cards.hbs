<section
  class='tab {{tabs.cards.cssClass}} character-sheet-cards'
  data-group='primary'
  data-tab='cards'
>
  <div class='flexcol gap-3 character-cards-scroll-container'>
    <section class='section'>
      <label>
        {{localize 'SIMPLE_DAGGERHEART.CharacterSheet.Cards.Loadout'}}
      </label>
      <div class='character-cards-grid'>
        {{#each cards.loadout as |card index|}}
          <div
            class='{{ifThen card "character-card" "character-card-spot"}}'
            data-card-type='loadout'
            data-card-index='{{index}}'
          >
            {{#if card}}
              <div class='card-title'>{{card.name}}</div>
              <div class='card-subtitle'>
                Level
                {{card.system.level}}
                {{card.system.domain}}
                {{card.system.type}}
              </div>
              <div class='card-recall-cost'>
                Recall:
                {{card.system.recallCost}}
                Stress
              </div>
              {{card.system.description}}
            {{/if}}
          </div>
        {{/each}}
      </div>
    </section>
    <section class='section'>
      <label>
        {{localize 'SIMPLE_DAGGERHEART.CharacterSheet.Cards.Vault'}}
      </label>
      <div class='character-cards-grid'>
        {{#each cards.vault}}
          <div class='character-card-spot'></div>
        {{/each}}
      </div>
    </section>
    <section class='section'>
      <label>
        {{localize 'SIMPLE_DAGGERHEART.CharacterSheet.Cards.Removed'}}
      </label>
      <div class='character-cards-grid'>
        {{#each cards.removed}}
          <div class='character-card-spot'></div>
        {{/each}}
      </div>
    </section>
  </div>
</section>